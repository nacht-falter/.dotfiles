# i3blocks config file

# Global properties
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=15

# Focused window title
[focused-window]
command=xdotool getactivewindow getwindowname 2> /dev/null | awk '{ if (length($0) > 50) print substr($0, 1, 47) "…"; else print $0 }' || echo "None"
signal=1

# Volume indicator
[volume-pipewire]
label=
command=$SCRIPT_DIR/volume-pipewire/volume-pipewire
interval=once
signal=10

# Media player
[mediaplayer]
command=$SCRIPT_DIR/mediaplayer/mediaplayer
instance=spotify
interval=5
signal=10

# Memory usage
[memory]
label= 
command=$SCRIPT_DIR/memory/memory
interval=30

# CPU usage
[cpu_usage2]
label=󰍛
command=mpstat 1 1 | awk '/^Average:/ {printf "%2d%%\n", 100 - $NF}'
interval=5

# Network
[network]
label= 
command=nmcli -t -f NAME connection show --active
interval=10

# Battery indicator
[battery2]
command=$SCRIPT_DIR/battery2/battery2
markup=pango
interval=10

[key_light]
command=$SCRIPT_DIR/key_light/key_light
full_text=
separator=false

[language]
command=xkblayout-state print %s | awk '{print toupper($0)}'
interval=once
signal=1

# Date
[date]
label= 
command=date '+%a, %Y-%m-%d'
interval=60
separator=false

# Time
[time]
label= 
command=date '+%H:%M:%S'
interval=1
