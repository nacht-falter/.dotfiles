# Disable shortcuts for iTerm
.blacklist [
    "iTerm2"
]

# change window focus within space
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - h : yabai -m window --focus west
ctrl - l : yabai -m window --focus east

# switch focus to next/previous space
ctrl - n : osascript -e 'tell application "System Events" to key code 124 using control down'
ctrl - p : osascript -e 'tell application "System Events" to key code 123 using control down'

# change focus between external displays (left and right)
ctrl - u: yabai -m display --focus north
ctrl - d: yabai -m display --focus south

# rotate layout clockwise
ctrl + cmd - r : yabai -m space --rotate 270

# flip along y-axis
ctrl + cmd - y : yabai -m space --mirror y-axis

# flip along x-axis
ctrl + cmd - x : yabai -m space --mirror x-axis

# toggle window float
ctrl + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
ctrl + cmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + cmd - e : yabai -m space --balance

# swap windows
ctrl + cmd - j : yabai -m window --swap south
ctrl + cmd - k : yabai -m window --swap north
ctrl + cmd - h : yabai -m window --swap west
ctrl + cmd - l : yabai -m window --swap east

# move window and split
shift + ctrl + cmd - j : yabai -m window --warp south
shift + ctrl + cmd - k : yabai -m window --warp north
shift + ctrl + cmd - h : yabai -m window --warp west
shift + ctrl + cmd - l : yabai -m window --warp east

#move window to prev and next space
ctrl + cmd - p : yabai -m window --space prev;
ctrl + cmd - n : yabai -m window --space next;

# move window to space #
ctrl + cmd - 1 : yabai -m window --space 1;
ctrl + cmd - 2 : yabai -m window --space 2;
ctrl + cmd - 3 : yabai -m window --space 3;
ctrl + cmd - 4 : yabai -m window --space 4;
ctrl + cmd - 5 : yabai -m window --space 5;
ctrl + cmd - 6 : yabai -m window --space 6;
ctrl + cmd - 7 : yabai -m window --space 7;
ctrl + cmd - 8 : yabai -m window --space 8;
ctrl + cmd - 9 : yabai -m window --space 9;
